{% extends 'AppBundle::layout.html.twig' %}

{% block head %}
<script src="{{ asset('/bundles/app/js/nrdb.card_modal.js') }}"></script>
<script type="text/javascript">

var Identity = null,
	Prebuilt = {{ prebuilt|json_encode|raw }},
	DeckDB = TAFFY([Prebuilt]),
	SelectedDeck = DeckDB().first(),
	MWL = null,
	DisplaySort = 'type',
	DisplaySortSecondary = 'name';

NRDB.data_loaded.add(function() {
	for (var i = 0; i < Prebuilt.cards.length; i++) {
		var slot = Prebuilt.cards[i];
		NRDB.data.get_cards_by_code(slot.card_code).update({indeck : parseInt(slot.qty, 10)});
	}
	update_deck();
});

</script>
{% endblock %}
{% block body %}

<div class="container">

<div class="row">
    <div class="col-xs-12 panel-group">
        <h1 class="prebuilt-name">
            <span class="hidden-xs icon icon-{{ prebuilt.faction_code }} {{ prebuilt.faction_code }}"></span>
            {{ prebuilt.name }}
        </h1>
    </div>
</div>

<div class="row">

<!-- Left-side Column -->
<div class="col-md-6">

<div id="deck">
	
<!-- Identity and Stats -->
<div class="row">
	<div class="col-sm-3">
		<img id="img_identity" src="#empty" alt="Identity" class="img-responsive  hidden-xs">
	</div><!-- /.col-md-3 -->
	<div class="col-sm-9">
		<h3 id="identity"></h3>
		<div id="influence"></div>
		<div id="agendapoints"></div>
		<div id="cardcount"></div>
	</div><!-- /.col-md-9 -->
</div><!-- /.row -->
<!-- Identity and Stats -->

<!-- Deck Content -->
<div class="row" id="deck-content"></div>
<!-- Deck Content -->

</div><!-- /#deck -->

</div>

</div>

</div>

{% endblock %}
